<section>
    <article>
        <h2>Your Dashboard</h2>
        <div class="center-content">
            <form class="new-post-form">
                <div>
                    {{!-- <label for="post-title">Title</label> --}}
                    <input type="text" id="post-title" name="post-title" value="Title it!" />
                </div>
                <div>
                    {{!-- <label for="post-body">Text</label> --}}
                    <textarea id="post-body" name="post-body">Blog it!</textarea>
                </div>
                <button type="submit" class="btn">Create</button>
            </form>
        </div>
        {{#if posts.length}}
        {{#each posts as |post|}}
        <div class="diamond">&#x2666; &#x2666; &#x2666;</div>
        {{> post-info post}}
        <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
        {{/each}}
        {{/if}}
    </article>

</section>
<script src="/javascript/add-post.js"></script>